<div class="h-full w-full max-w-xs mx-auto align-middle">
  <h2>Blue Wave Authentication</h2>
  <%= simple_form_for :user, :url => auth_path do |f| %>
    <%= f.input :bluewave_ip, error: 'IP is mandatory, please specify one' %>
    <%= f.input :username, error: 'Username is mandatory, please specify one' %>
    <%= f.input :password, error: 'Password is mandatory, please specify one' %>
    <%= f.button :submit, "Login" %>
  <% end %>
</div>

